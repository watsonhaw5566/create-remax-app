{
  "name": "create-remax3-app",
  "version": "1.0.0",
  "description": "Create Remax apps with no build configuration.",
  "bin": {
    "create-remax-app": "./bin/create-remax-app"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "test": "jest"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remaxjs/create-remax-app.git"
  },
  "keywords": [
    "Remax",
    "React",
    "CLI"
  ],
  "authors": [
    "QC-L",
    "watsonhaw"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/remaxjs/create-remax-app/issues"
  },
  "files": [
    "lib",
    "bin",
    "templates"
  ],
  "homepage": "https://github.com/remaxjs/create-remax-app#readme",
  "dependencies": {
    "async": "^3.1.0",
    "chalk": "^4.1.0",
    "ejs": "^3.1.7",
    "metalsmith": "^2.3.0",
    "prompts": "^2.4.0",
    "semver": "^7.3.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/debug": "^4.1.12",
    "@types/ejs": "^3.0.5",
    "@types/jest": "^26.0.16",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^18",
    "@types/prompts": "^2.0.9",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^15.0.11",
    "jest": "^26.6.3",
    "lint-staged": "^12.4.1",
    "prettier": "^3.3.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
